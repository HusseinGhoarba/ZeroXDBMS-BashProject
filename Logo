comment


{
for ((i=0 ; i<=100 ; i+=5));
do 
    sleep 0.1
    echo $i

done
} | whiptail  --gauge "Loading ZeroXDBMS-Script !" 6 50 0

echo "                                                                                                                       "
echo -e "${blue}--------------------------------------------------------------------------------------------------------------------------------------${clear}"
echo -e "${blue}--------------------------------------------------------------------------------------------------------------------------------------${clear}"
figlet -ctf small "ZeroX DBMS"
echo -e "${blue}--------------------------------------------------------------------------------------------------------------------------------------${clear}"
echo -e "${blue}--------------------------------------------------------------------------------------------------------------------------------------${clear}"
echo -e "                                                                                                    ${yellow}Project by : HG&AE${clear}"
